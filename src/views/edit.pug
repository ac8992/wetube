extends base.pug

block content 
    h4 Change Title of video
    form(method="POST")
        input(placeholder="Title", required, type="text", name="title", value=video.title)
        input(placeholder="Description", required, type="text", name="description", value=video.description)
        input(placeholder="Hashtags, seprated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
        input(value="save" type="submit")