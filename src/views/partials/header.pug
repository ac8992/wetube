    a(href="/").header__logo
        i.fab.fa-youtube
        span.header-title Wetube
    nav 
        ul 
            li 
                a(href="/search")
                    i.fas.fa-search
            if loggedIn
                li 
                    a(href="/videos/upload") Upload Video

                li 
                    a(href="/users/edit") Edit Profile
                li 
                    a(href="/users/logout") Logout
                li  
                    a(href=`/users/${loggedInUser._id}`) 
                        if loggedInUser.avatarUrl === ""
                            span My Profile
                        else 
                            img.header__avatar(src="/"+loggedInUser.avatarUrl)
                //- li 
                //-     a(href="/my-profile") #{loggedInUser.name}Ïùò Profile
            else
                li  
                    a(href="/login") Login
